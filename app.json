{
  "expo": {
    "name": "PMF Book Store",
    "slug": "pmf-book-store",
    "version": "1.0.0",
    "description": "Mobile application for ordering books that has CRUD functionalities, user authentication and realtime database (Firebase)",
    "orientation": "portrait",
    "icon": "./assets/pmf-logo.png",
    "splash": {
      "image": "./assets/pmf-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0066ff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
